<ul>
  <% @question.answers.each do |ans| %>
    <li> <%= ans.answer %> 
      <%= button_to '+1', upvote_question_answer_path(@question, ans), method: :post %>
      <%= button_to '-1', downvote_question_answer_path(@question, ans), method: :post %>
      <span><%= pluralize(ans.votes.sum(:value), "vote") %></span>
      <%= link_to "Edit", edit_question_answer_path(@question, ans) %>
      <%= link_to 'Delete', question_answer_path(@question, ans), method: :delete %>
    </li>
  <% end %>
</ul>
