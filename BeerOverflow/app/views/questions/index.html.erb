<h1> Beer Overflow Homepage </h1>

<p>  <%= link_to 'Ask Question', new_question_path %> </p>

<table>
  <% @questions.each do |question| %>
  <% @vote = Vote.new %>
    <tr>
      <td> 
        <%= button_to '+1', upvote_question_path(question), method: :post %>
        <%= button_to '-1', downvote_question_path(question), method: :post %>
      </td>
      <td> 
        <span><%= pluralize(question.votes.sum(:value), "vote") %></span>
      </td>
      <td> <%= link_to question.question, question %> </td>
    </tr>
  <% end %> 
</table>
